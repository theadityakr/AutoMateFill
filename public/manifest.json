{
  "manifest_version": 3,
  "name": "AutoMateFill",
  "version": "1.0",
  "description": "Auto-fill forms with saved data and AI-generated responses.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo48.png",
      "48": "logo48.png",
      "128": "logo192.png"
    }
  }
}
